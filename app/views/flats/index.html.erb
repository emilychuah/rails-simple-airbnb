<h1>All our Flats (<%= @flats.count %>)</h1>

<div class="row">
  <% @flats.each do |flat| %>
    <div class="col-md-4">
      <div class="flat-card">
        <div class="flat-card-image"></div>
        <div class="flat-card-content">
          <div class="flat-card-title">
            <h4><%= flat.name %></h4>
          </div>
          <p><%= flat.address %></p>
          <div>
            <div class="flex">
              <i class="material-icons me-2">group</i><span><%= flat.number_of_guests %></span>
              <i class="material-icons me-2 ms-3">euro_symbol</i><span><%= flat.price_per_night %></span>
            </div>
          </div>
        </div>
        <div class="flat-card-actions">
          <%= link_to 'More info', flat_path(flat) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
